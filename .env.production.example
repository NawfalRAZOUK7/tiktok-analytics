# Production Environment Configuration Template
# Copy this to .env.production and fill with real values
# NEVER commit this file with real secrets!

ENVIRONMENT=production

# Django Settings
# IMPORTANT: Generate a new secret key for production!
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database (PostgreSQL recommended for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=tiktok_analytics_prod
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_HOST=your-db-host.com
DB_PORT=5432

# CORS (Your production domains)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# API Settings
API_BASE_URL=https://api.yourdomain.com/api
API_RATE_LIMIT=1000/hour
API_PAGE_SIZE=20
API_MAX_PAGE_SIZE=50
API_TIMEOUT=30

# Static & Media Files
STATIC_URL=/static/
STATIC_ROOT=/var/www/tiktok-analytics/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/tiktok-analytics/media/

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/tiktok-analytics/app.log

# Data
TIKTOK_JSON_PATH=/opt/data/tiktok_export.json

# Email (Production SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Security Headers
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# AWS S3 (Optional - for static/media files)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Sentry (Optional - for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
