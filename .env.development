# Development Environment Configuration
# This file contains safe defaults for local development

ENVIRONMENT=development

# Django Settings
DJANGO_SECRET_KEY=dev-secret-key-not-for-production-12345
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (SQLite for development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# CORS (Allow all local ports)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080,http://localhost:5000,http://127.0.0.1:5000

# API Settings
API_BASE_URL=http://127.0.0.1:8000/api
API_RATE_LIMIT=10000/hour
API_PAGE_SIZE=20
API_MAX_PAGE_SIZE=100
API_TIMEOUT=30

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/dev.log

# Data
TIKTOK_JSON_PATH=./data/tiktok_export.json

# Email (Console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
