# Root Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ======================
# ENVIRONMENT
# ======================
# Options: development, staging, production
ENVIRONMENT=development

# ======================
# Backend (Django)
# ======================

# Security
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Development - SQLite)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Database (Production - PostgreSQL)
# Uncomment these for production:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=tiktok_analytics
# DB_USER=postgres
# DB_PASSWORD=yourpassword
# DB_HOST=localhost
# DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# API Settings
API_RATE_LIMIT=1000/hour
API_PAGE_SIZE=20
API_MAX_PAGE_SIZE=100

# Static Files (Production)
# STATIC_URL=/static/
# STATIC_ROOT=/var/www/tiktok-analytics/static/
# MEDIA_URL=/media/
# MEDIA_ROOT=/var/www/tiktok-analytics/media/

# Email Configuration (for password reset, etc.)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ======================
# Frontend (Flutter)
# ======================

# API Configuration
API_BASE_URL=http://127.0.0.1:8000/api
API_TIMEOUT=30

# App Configuration
APP_NAME=TikTok Analytics
APP_VERSION=1.0.0

# ======================
# Data Sources
# ======================
TIKTOK_JSON_PATH=./data/tiktok_export.json

# ======================
# Logging
# ======================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ======================
# Security
# ======================
# Generate strong secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

# JWT Settings (if implementing JWT auth later)
# JWT_SECRET_KEY=your-jwt-secret-key
# JWT_ALGORITHM=HS256
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
# JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
